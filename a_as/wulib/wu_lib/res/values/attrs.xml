<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CoverFlow">
        <!-- y坐标上的文字大小 -->
        <attr name="isTranslateModeZ" format="boolean" />
        <attr name="isTranslateModeY" format="boolean" />
        <attr name="isTranslateModeX" format="boolean" />
        <attr name="isRotationModeY" format="boolean" />
        <attr name="mMaxRotationAngleY" format="dimension" />
        <attr name="mMaxTranslateValueZ" format="dimension" />
        <attr name="mMaxTranslateValueY" format="dimension" />
        <attr name="mMaxTranslateValueX" format="dimension" />
    </declare-styleable>
    <!-- for CoverFlowImage -->
    <declare-styleable name="CoverFlowImage">
        <attr name="imageWidth" format="dimension" />
        <attr name="imageHeight" format="dimension" />
        <attr name="withReflection" format="boolean" />
        <attr name="reflectionGap" format="dimension" />
        <attr name="imageReflectionRatio" format="float" />
    </declare-styleable>
    <declare-styleable name="DrawableTextView">
        <attr name="leftDrawableSize" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="MultiplierSizeViewStyle">
        <attr name="heightMultiplier" format="float" />
        <attr name="widthMultiplier" format="float" />
    </declare-styleable>

    <!--RoundImageView-->
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>
    <!--RoundImageView-->
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
    </declare-styleable>
    <declare-styleable name="SingleTouchView">
        <attr name="src" format="reference" />
        <!-- 用于缩放旋转的图标 -->
        <attr name="editable" format="boolean" />
        <!-- 是否处于可编辑状态 -->
        <attr name="frameColor" format="color" />
        <!-- 边框颜色 -->
        <attr name="frameWidth" format="dimension" />
        <!-- 边框线宽度 -->
        <attr name="framePadding" format="dimension" />
        <!-- 边框与图片的间距 -->
        <attr name="degree" format="float" />
        <!-- 旋转角度 -->
        <attr name="scale" format="float" />
        <!-- 缩放比例 -->
        <attr name="controlDrawable" format="reference" />
        <!-- 控制图标 -->
        <attr name="controlLocation">                     <!-- 控制图标的位置 -->
            <enum name="left_top" value="0" />
            <enum name="right_top" value="1" />
            <enum name="right_bottom" value="2" />
            <enum name="left_bottom" value="3" />
        </attr>
    </declare-styleable>
</resources>